{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
